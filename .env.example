# Database Configuration
DATABASE_URL=sqlite:///./chat_app.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/chatapp

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=false

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt,mp4,mp3

# Avatar Settings
DEFAULT_AVATAR_CATEGORY=business  # business, casual, tech, creative
AVATAR_CACHE_DURATION=3600  # seconds

# Chat Settings
MAX_MESSAGE_LENGTH=1000
MAX_ROOM_NAME_LENGTH=50
MESSAGE_HISTORY_LIMIT=100

# External Services (Optional)
UNSPLASH_ACCESS_KEY=your-unsplash-key-for-better-avatars
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis (for scaling)
REDIS_URL=redis://localhost:6379/0

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true